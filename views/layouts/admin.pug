doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        title= req.strs.appname + ': ADMIN'
        meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0', name='viewport')
        meta(name='viewport', content='width=device-width')
        link(href= req.origin + '/css/admin.css', rel='stylesheet')
        link(href= req.origin + '/bower/vanillatoasts/vanillatoasts.css', rel='stylesheet')
        //- Fonts and icons
        link(href= req.origin + '/bower/mdi/css/materialdesignicons.min.css', rel='stylesheet')
        link(href='http://fonts.googleapis.com/css?family=Roboto:400,700,300', rel='stylesheet', type='text/css')
        link(href= req.origin + '/css/pe-icon-7-stroke.css', rel='stylesheet')
    body
        //- Core JS Files
        script(src= req.origin + '/bower/zepto/zepto.min.js', type='text/javascript')
        script(src= req.origin + '/bower/vue/dist/vue.min.js', type='text/javascript')
        script(src= req.origin + '/bower/vue-resource/dist/vue-resource.min.js', type='text/javascript')
        script(src= req.origin + '/bower/vanillatoasts/vanillatoasts.js', type='text/javascript')
        #header
            #menu-toggle
            | Dashboard
        #sidebar
            a#sidebar-title(href='/')
                | #{req.strs.appname}
            ul#sidebar-list
                li
                    a(href= req.origin + "/admin/crud")
                        i.mdi.mdi-tag-multiple
                        | crud
                li
                    a(href= req.origin + "/admin/users")
                        i.mdi.mdi-account-multiple
                        | users
                li
                    a
                        i.mdi.mdi-shopping
                        | catalog

        #page-content
            block content
    //- Module Script
    script(src= req.origin + '/js/sidebar-animate.js')
